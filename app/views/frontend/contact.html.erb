        <!-- Marketing messaging and featurettes
    ================================================== -->
    <!-- Wrap the rest of the page in another container to center all the content. -->

    <div class="container marketing">

      <!-- Three columns of text below the carousel -->
      <div class="row">
      <% @posts.each do |p| %>
        <div class="col-lg-4" style='vertical-align: bottom; display: inline-block'>
            <%= image_tag p.smart_image, :class => 'img-circle', :style => "width: 200px; height: 200px" %>
            <h2><%= p.title %></h2>
            <p style='height: 80px; overflow: hidden; margin-bottom: 20px;'><%= p.lead %></p>
            <p><a class="btn btn-primary" href="/post/<%= p.id %>" role="button">Read On &raquo;</a></p>
        </div><!-- /.col-lg-4 -->
        <% end %>
        
      </div><!-- /.row -->


      <!-- START THE FEATURETTES -->

      <% flip = false %>
      <% @popular.each do |p| %>
  
        <hr class="featurette-divider">
        <% flip = !flip %>
        
        <div class="row featurette">
          <% if flip then %>
            <div class="col-md-5">
              <img class="featurette-image img-responsive" src="<%= raw p.smart_image %>" alt="Generic placeholder image">
            </div>
          <% end %>
          <div class="col-md-7">
            <h2 class="featurette-heading"><%= p.title.split('.').first  %> <span class="text-muted"><%= p.title.split('.').from(1).join('.') %></span></h2>
            <p class="lead"><%= p.lead %></p>
            <p><a class="btn btn-primary" href="/post/<%= p.id %>" role="button">Read On &raquo;</a></p>
          </div>
          <% unless flip then %>
            <div class="col-md-5">
              <img class="featurette-image img-responsive" src="<%= raw p.smart_image %>" alt="Generic placeholder image">
            </div>
          <% end %>
        </div>

      <% end %>

      <!-- /END THE FEATURETTES -->


      <!-- FOOTER -->
      <footer>
        <p class="pull-right"><a href="#">Back to top</a></p>
        <p>&copy; 2014 Company, Inc. &middot; <a href="#">Privacy</a> &middot; <a href="#">Terms</a></p>
      </footer>

    </div><!-- /.container -->


